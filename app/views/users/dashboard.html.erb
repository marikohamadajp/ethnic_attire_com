<h1>Dashboard</h1>

<div class="container">
      <div class="row">
        <% @dresses.each do |dress| %>
          <% if dress.user_id == current_user.id %>
            <div class="col col-sm-1 col-md-2 col-lg-4">
              <div class="card" style="width: 18rem;">
              <%= image_tag dress.photo.url, alt: dress.name, :class => "card-dress" %>
                <div class="card-body">
                  <h5 class="card-title"><%= dress.price %> â‚¬</h5>
                  <p class="card-text"><%= dress.name %></p>
                  <p class="card-text"><%= dress.size %></p>
                  <p class="card-text"><%= dress.color %></p>
                  <%= image_tag dress.user.photo, :class => "card-dress-user avatar-bordered"%>
                </div>
              </div>
            </div>
            <% end %>
          <% end %>
      </div>
    </div>
